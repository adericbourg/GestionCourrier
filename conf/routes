# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index
GET     /                               controllers.Assets.at(path="/public", file="index.html")

GET     /residents                      controllers.Residents.allResidents()

GET     /resident/:id                   controllers.Residents.resident(id: Long)
GET     /resident/:id/residences        controllers.Residents.residences(id: Long)
POST    /resident/create                controllers.Residents.create()
POST    /resident/:id/update            controllers.Residents.updateResident(id: Long)
POST    /resident/:id/addResidence      controllers.Residents.addResidence(id: Long)
POST    /resident/:id/renewResidence    controllers.Residents.renewResidence(id: Long)

GET     /residents/find/:query          controllers.Residents.search(query: String)

POST    /inbox/register                 controllers.Inbox.registerMail()

GET     /outbox/mails                   controllers.Outbox.mails()

GET     /departments                    controllers.StaticLists.departments()
GET     /residencetypes                 controllers.StaticLists.residenceTypes()
GET     /genders                        controllers.StaticLists.genders()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
GET     /public/*file                   controllers.Assets.at(path="/public", file)
