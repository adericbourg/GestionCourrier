# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Assets.at(path="/public", file="index.html")

# Residence
GET     /json/residents                     controllers.Residents.allResidents()

GET     /json/resident/:id                  controllers.Residents.resident(id: Long)
POST    /json/resident/create               controllers.Residents.create()
POST    /json/resident/:id/update           controllers.Residents.updateResident(id: Long)
POST    /json/resident/:id/addResidence     controllers.Residents.addResidence(id: Long)
POST    /json/resident/:id/renewResidence   controllers.Residents.renewResidence(id: Long)

GET     /json/residents/find/:query         controllers.Residents.search(query: String)

#Inbox
POST    /json/inbox/register                controllers.Inbox.registerMail()

# Outbox
GET     /json/outbox/mails                  controllers.Outbox.mails()
POST    /json/outbox/withdraw/:mailId       controllers.Outbox.withdraw(mailId: Long)

# Reference lists
GET     /json/departments                   controllers.StaticLists.departments()
GET     /json/residencetypes                controllers.StaticLists.residenceTypes()
GET     /json/genders                       controllers.StaticLists.genders()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)
GET     /public/*file                       controllers.Assets.at(path="/public", file)
